<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">




    <RelativeLayout
        android:id="@+id/rl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="fill_parent"
            android:layout_height="60dp" >

            <TextView
                android:id="@+id/img_head"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@drawable/jbg"
                android:text="Restaurant List"
                android:textStyle="italic|bold"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@android:color/background_light"/>

            <Button
                android:id="@+id/img_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/burger" />

            <Button
                android:id="@+id/img_more1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/burger" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rl_head"
            android:background="@drawable/srchbg" >

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/search" />

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:imeActionId="@+id/login"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="1"
                android:cursorVisible="false"
                android:singleLine="true" />
        </RelativeLayout>

        <ListView
            android:id="@+id/list_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/rl_search"
            android:divider="#A2CF32"
            android:dividerHeight="2px"
            android:layout_alignParentBottom="true">
        </ListView>

        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp" >

            <!-- The main content view -->

            <LinearLayout
                android:id="@+id/ll_data"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/sidebarbg"
                android:orientation="vertical"
                android:paddingLeft="10dp" >

                <LinearLayout
                    android:id="@+id/ll_home"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/img_home"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/homebtn" />

                    <TextView
                        android:id="@+id/txt_avail"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:text="Home"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cat"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/catbtn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Category"
                        android:textColor="#fff" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_special"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/specialbtn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Special Offers"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/aboutbtn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="About us"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_social"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/socialbtn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Social Sharing"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_term"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/termbtn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Terms and Conditions"
                        android:textColor="#fff" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_profile"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/btnbg"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/profilebtn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Profile"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_infodialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </RelativeLayout>





</RelativeLayout>





